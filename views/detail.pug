extends base
block content 
    .container-fluid
      .row.px-xl-5
        .col-12
          nav.breadcrumb.bg-light.mb-30
            a.breadcrumb-item.text-dark(href='#') Home
            a.breadcrumb-item.text-dark(href='#') Shop
            span.breadcrumb-item.active Shop Detail
    // Breadcrumb End
    // Shop Detail Start
    .container-fluid.pb-5.kattaqism
      .row.px-xl-5.kattaqism
        .col-lg-5.mb-30
          #product-carousel.carousel.slide(data-ride='carousel')
            .carousel-inner.bg-light
              .carousel-item.active
                img.w-100.h-100(src=`${product.photo}`, alt='Image')
              .carousel-item
                img.w-100.h-100(src=`${product.photo}`, alt='Image')
              .carousel-item
                img.w-100.h-100(src=`${product.photo}`, alt='Image')
              .carousel-item
                img.w-100.h-100(src=`${product.photo}`, alt='Image')
            a.carousel-control-prev(href='#product-carousel', data-slide='prev')
              i.fa.fa-2x.fa-angle-left.text-dark
            a.carousel-control-next(href='#product-carousel', data-slide='next')
              i.fa.fa-2x.fa-angle-right.text-dark
        .col-lg-7.h-auto.mb-30
          .h-100.bg-light.p-30
            h3= product.name
            .d-flex.mb-3
              .text-primary.mr-2
                small.fas.fa-star
                small.fas.fa-star
                small.fas.fa-star
                small.fas.fa-star-half-alt
                small.far.fa-star
              small.pt-1 (99 Reviews)
            h3.font-weight-semi-bold.mb-4= product.price
            p.mb-4= product.description
            .d-flex.mb-3
                strong.text-dark.mr-3 Sizes:
                form
                each el in product.size 
                    .custom-control.custom-radio.custom-control-inline
                        input#size-1.custom-control-input(type='radio', name='size')
                        label.custom-control-label(for='size-1')= el.name
            .d-flex.mb-4
                strong.text-dark.mr-3 Colors:
                form
                each el in product.color
                    .custom-control.custom-radio.custom-control-inline
                        input#color-1.custom-control-input(type='radio', name='color')
                        label.custom-control-label(for='color-1')= el.name 
            .d-flex.align-items-center.mb-4.pt-2
              .input-group.quantity.mr-3(style='width: 130px')
                .input-group-btn
                  button.btn.btn-primary.btn-minus
                    i.fa.fa-minus
                input.form-control.bg-secondary.border-0.text-center(type='text', value='1')
                .input-group-btn
                  button.btn.btn-primary.btn-plus
                    i.fa.fa-plus
              button.btn.btn-primary.px-3
                i.fa.fa-shopping-cart.mr-1
                |  Add To Cart
            .d-flex.pt-2
              strong.text-dark.mr-2 Share on:
              .d-inline-flex
                a.text-dark.px-2(href='')
                  i.fab.fa-facebook-f
                a.text-dark.px-2(href='')
                  i.fab.fa-twitter
                a.text-dark.px-2(href='')
                  i.fab.fa-linkedin-in
                a.text-dark.px-2(href='')
                  i.fab.fa-pinterest
                    |  
          
      .row.px-xl-5
        .col
          .bg-light.p-30
            .nav.nav-tabs.mb-4
              a.nav-item.nav-link.text-dark.active(data-toggle='tab', href='#tab-pane-1') Description
              a.nav-item.nav-link.text-dark(data-toggle='tab', href='#tab-pane-3')= ` Reviews (${product.reviews.length})`
            .tab-content
              #tab-pane-1.tab-pane.fade.show.active
                h4.mb-3 Product Description
                p= product.description
                li.list-group-item.px-0
                p
              #tab-pane-3.tab-pane.fade
                .row
                  .col-md-6
                    h4.mb-4= `${product.reviews.length} review for ${product.name}`
                    each el in product.reviews
                        .media.mb-4
                            img.img-fluid.mr-3.mt-1(src='img/user.jpg', alt='Image', style='width: 45px')
                        
                            .media-body
                                h6= `${el.user.name}   Created : ${el.createdAt}`
                                .text-primary.mb-2
                                i.fas.fa-star
                                i.fas.fa-star
                                i.fas.fa-star
                                i.fas.fa-star-half-alt
                                i.far.fa-star
                                p= el.description
                  .col-md-6
                    h4.mb-4 Leave a review
                    small
                      | Your email address will not be published. Required fields
                      | are marked *
                    .d-flex.my-3
                      p.mb-0.mr-2 Your Rating * :
                        //- input#bahonikirit
                    form
                      .form-group
                        label(for='message') Your Review *
                        textarea#message.form-control(cols='30', rows='5')
        
                      .form-group.mb-0
                        input.btn.btn-primary.px-3.boss(type='submit', value='Leave Your Review')
        |  --&gt;
      script(src="/js/lib/axios.js")
      script(src="/js/detail.js")  